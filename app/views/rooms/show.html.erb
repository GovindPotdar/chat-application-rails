<% if @room.many_to_many? %>
    <div class="container mt-4">
        <div class="alert alert-danger" role="alert">
            <%= join_group_rooms_url(@room.room_number)%> - <strong> Share this link with friends</strong>
        </div>
    </div>
<% end %>

<div class="container mt-5" id="message-box" style="overflow-x: hidden;overflow-y: auto;background-color: lightblue;border-radius: 10px; width:100%; height:75vh">
        <%= render partial: "message", collection: @messages %>
</div>

<div class="container mt-1" style="width:100vh">
    <div class="row">
       
        <%= form_with url:messages_path do |form| %>

            <%= form.hidden_field :room_number, value: @room.room_number %>
            <div class="col-11">
                <%= form.text_field :message,class:"form-control",placeholder:"Send Message...."%>
            </div>

            <div class="col-1">
                <%= form.submit "Send",id:"send-button",class:"btn btn-primary"%>
            </div>

        <% end %>
    </div>
</div>


<script>

    document.getElementById("send-button").addEventListener("click",function(){

    setTimeout(function(){
        document.getElementById("message").value = ""
    },500)

    })
    var objDiv = document.getElementById("message-box")
    
      objDiv.scrollTop = objDiv.scrollHeight;
    
</script>

